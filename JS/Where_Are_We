function smolnamenu() {
  const original = document.querySelector("#lorem-ipsum-smolna");
  const maintext = document.createElement("p");
  const ul = document.createElement("ul");
  const li1 = document.createElement("li");
  const li2 = document.createElement("li");

  maintext.innerText = "In addition to the regular Psiakowo Menu, we have:";
  li1.innerText = "1 = 1";
  li2.innerText = "2 = 2";

  ul.appendChild(li1);
  ul.appendChild(li2);

  original.innerHTML = ""; // clear content using innerHTML
  original.appendChild(maintext);
  original.appendChild(ul);
  replaceButtonWithMainInfo('showsmolnamenu');
}

document.addEventListener('DOMContentLoaded', function() {
  document.querySelector("#showsmolnamenu").onclick = function() {
    smolnamenu();
  }
});



function smolnahours() {
  const original = document.querySelector("#lorem-ipsum-smolna");
  const maintext = document.createElement("p")
  const ul = document.createElement("ul");
  const li1 = document.createElement("li");
  const li2 = document.createElement("li");
  const li3 = document.createElement("li");
  const li4 = document.createElement("li");
  const li5 = document.createElement("li");
  const li6 = document.createElement("li");
  const li7 = document.createElement("li");

  maintext.innerText = "Our Opening times (Including public holidays)are as follows:"
  li1.innerText = ("Monday: 8AM-12AM")
  li2.innerText = ("Tuesday: 8AM - 12AM")
  li3.innerText = ("Wednesday:8AM - 12AM")
  li4.innerText = ("Thursday: 8AM - 12AM")
  li5.innerText = ("Friday: 8AM - 12AM")
  li6.innerText = ("Saturday: 8AM - 12 AM")
  li7.innerText = ("Sunday: Closed")

  ul.appendChild(li1);
  ul.appendChild(li2);
  ul.appendChild(li3);
  ul.appendChild(li4);
  ul.appendChild(li5);
  ul.appendChild(li6);
  ul.appendChild(li7);

  original.innerHTML = ""; // clear content using innerHTML
  original.appendChild(maintext);
  original.appendChild(ul);
  replaceButtonWithMainInfo('showsmolnahours');
}

document.addEventListener('DOMContentLoaded', function() {
  document.querySelector("#showsmolnahours").onclick = function() {
    smolnahours();
  }
});




function smolnarating() {
  const original = document.querySelector("#lorem-ipsum-smolna")
  const maintext = document.createElement("p")
  const review = document.createElement("p")

  maintext.innerText = "Our restaurant was reviewed by 26 customers. The average review given, out of 5 is:"
  review.innerText = "4.5"

  original.innerHTML = "";
  original.appendChild(maintext);
  original.appendChild(review);
  replaceButtonWithMainInfo('showsmolnarating');
}

document.addEventListener('DOMContentLoaded', function() {
  document.querySelector("#showsmolnarating").onclick = function() {
    smolnarating();
  }
});



function replaceButtonWithMainInfo(id) {
  const originalButton = document.getElementById(id);
  
  // create new button element
  const newButton = document.createElement('button');
  newButton.innerText = 'Main Info';
  newButton.onclick = function() {
    smolnamaininfo();
  };

  // replace original button with new button
  originalButton.parentNode.replaceChild(newButton, originalButton);
}



function smolnamaininfo() {
  const original = document.querySelector("#lorem-ipsum-smolna")
  const text = document.createElement("p")

  text.innerText = "Lorem ipsum dolor sit amet,rerit turpis. e effellus nulla, viverra non neque non, consectetur accumsan mauris. Praesent maximus porta diam vel molestie. Aliquam sodales elit nibh, vel gravida tellus efficitur mattis.";

  original.innerHTML = "";
  original.appendChild(text)
}

