import java.io.File;
import java.io.FileWriter;
import java.io.IOException;
import java.util.Scanner;

public class Counter {
    public static void main(String[] args) {
        String filePath = "D:\\Programming\\counter.txt";
        int counter = 1; // default value if file doesn't exist
        
        // Check if file exists
        File file = new File(filePath);
        if (file.exists()) {
            try {
                Scanner scanner = new Scanner(file);
                while (scanner.hasNext()) {
                    counter = Integer.parseInt(scanner.next());
                }
                scanner.close();
                counter++; // increment the counter value
            } catch (IOException e) {
                e.printStackTrace();
            }
        }
        
        try {
            FileWriter writer = new FileWriter(filePath, true); // append to file
            writer.write(Integer.toString(counter) + "\n"); // append new line
            writer.close();
        } catch (IOException e) {
            e.printStackTrace();
        }
    }
}